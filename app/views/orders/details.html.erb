<div class="container">
	<div class="row">
		<div class="container" style=" border-radius: 8px; text-align: center; width: 40%; padding: 15px; margin-top: 45px; background-color: #f7f7f7; box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)">
				<p>
					<strong>Order ID: </strong>
					<%= @order.order_id %>
				</p>

				<p>
					<strong>Order Date: </strong>
					<%= @order.order_date %>
				</p>

				

				<p>
					<table style="width: 100%" class="table">
						<thead>
							<tr>	
								<th>Product Name</th>
								<th>Quantity</th>
								<th>Product Price</th>
							</tr>
						</thead>

						<% @c = 0 %>
						<% 	@product_list.each do |p| %>

						<tbody>
							<tr>		
								<td><%= p.prod_name %></td>
								<td><%= p.quant %></td>
								<td><%= @prices[@c]*p.quant %><br/></td>
								<% @c = @c + 1 %>
							</tr>	
						</tbody>

						<% end %>
					</table>	
				 </p>

				 <p>
					<strong>Total Purchase: </strong>
					<%= @order.order_total %>
				</p>
				
				<div style="margin-left: 50px">
		<a class="btn" style="background-color: #555555; color: white" href="../orders">Back</a> 
	</div>
		</div>
	</div>
</div>

