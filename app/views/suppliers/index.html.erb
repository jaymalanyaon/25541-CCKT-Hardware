<div class="container" style=" border-radius: 8px; text-align: center; width: 90%; padding: 15px; margin-top: 45px; margin-bottom: 45px; background-color: #f7f7f7; box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)">
	<center>
				<p><span class="fa-stack fa-5x">
				<i class="fa fa-circle fa-stack-2x"></i>
				<i class="fa fa-truck fa-stack-1x fa-inverse"></i>
				</span></p>
				<p><h1 style="padding-bottom: 20px">SUPPLIERS</h1></p>
				<a class="btn" style="background-color: #555555; color: white" href="suppliers/newsupplier">New Supply</a>
				<a class="btn" style="background-color: #555555; color: white" href="stocks">Re-Stock</a>
	</center>
	<div style="padding-top: 50px">
	<table style="width: 100%" class="table table-hover" >
		<thead>
			<tr>
				<th style="text-align: center;">Supplier ID</th>
				<th style="text-align: center;">Supplier Name</th>
				<th style="text-align: center;">Supplier Address</th>
				<th></th>
			</tr>
		</thead>

		<tbody style="text-align: center;">
			<% @suppliers.each do |supplier| %>
				<tr>
					<td><%= supplier.supplier_id %></td>
					<td><%= supplier.supplier_name %></td>
					<td><%= supplier.supplier_address %></td>
					<td>
						<a href="/suppliers/<%= supplier.id %>/edit" class="btn btn-primary"><span class="fa fa-edit"></span> Edit</a>
						<a href="/suppliers/<%= supplier.id %>" class="btn btn-success"><span class="fa fa-info-circle"></span> Details</a>
						<a href="/suppliers/<%= supplier.id %>/delete" class="btn btn-danger"><span class="fa fa-trash"></span> Delete</a>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	</div>
	<div style="margin-left: 50px">
		<a class="btn" style="background-color: #555555; color: white" href="home">Back</a> 
	</div>
</div>