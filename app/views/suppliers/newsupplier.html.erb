<%= form_for(@supplier) do |f| %>
	<div class="container" style=" border-radius: 8px; text-align: center; width: 40%; padding: 15px; margin-top: 45px; background-color: #f7f7f7; box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)">
		<div class="row">
			<div class="col-md-6">
				<center>	
					<p>Supplier ID:</p> 
					<p><%= f.label :supplier_id, disabled:true, value:@randomIDsup %>
				   	   <%= f.hidden_field :supplier_id, value:@randomIDsup %></p>

					<p>Supplier Name:</p>
					<p><%= f.text_field :supplier_name, :required => true %></p>
				
					<p>Supplier Address:</p>
					<p><%= f.text_field :supplier_address, :required => true %></p>
				
					<p>Shipment Date:</p>
					<p><%= f.date_field :shipment_date, :required => true %></p>
				
					<p>Shipment Amount:</p>
					<p><%= f.number_field :shipment_amount, :required => true %></p>
				</center>
			</div>

			<div class="col-md-6" style="margin-top: 30px">
				<center>
					<p>Product ID: </p>
					<p><label value="@randomIDprod"><%= @randomIDprod %></label></p>
					<p><input type="hidden" name="product[product_id]" value="<%= @randomIDprod %>"></p>
				
					<p>Product Name:</p>
					<p><input type="text_field" name="product[product_name]" required></p>
					
					<p>Product Stock:</p>
					<p><input type="number" name="product[product_stock]" required></p>
				
					<p>Product Price:</p>
					<p><input type="number" name="product[product_price]" required></p>
				</center>
			</div>
		</div>

		<div class="row">	
			<a href="/suppliers" class="btn btn-danger">Cancel</a>
			<button type="submit" class="btn btn-success">Submit</button>
		</div>
	</div>	

<% end %>