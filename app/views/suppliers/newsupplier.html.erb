<%= form_for(@supplier) do |f| %>
	<div class="container" style=" border-radius: 8px; text-align: center; width: 40%; padding: 15px; margin-top: 45px; background-color: #f7f7f7; box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)">
		<div style = "margin-top: 45px; margin-bottom: 45px; color: red">
					<% @supplier.errors.full_messages.each do |message| %>
						<li><%= message %> </li>
					<% end %>
		</div>
		<div class="row">
			<div class="col-md-6">
				<center>	
					<p><strong>Supplier ID:</strong></p> 
					<p><%= f.label :supplier_id, disabled:true, value:@randomIDsup %>
				   	   <%= f.hidden_field :supplier_id, value:@randomIDsup %></p>

					<p><strong>Supplier Name:</strong></p>
					<p><%= f.text_field :supplier_name, :required => true, class: "form-control" %></p>
				
					<p><strong>Supplier Address:</strong></p>
					<p><%= f.text_field :supplier_address, :required => true, class: "form-control"%></p>
				
					<p><strong>Shipment Date:</strong></p>
					<p><%= f.date_field :shipment_date, :required => true, class: "form-control"%></p>
				
					<p><strong>Shipment Amount:</strong></p>
					<p><%= f.number_field :shipment_amount, :required => true, class: "form-control"%></p>
				</center>
			</div>

			<div class="col-md-6" style="margin-top: 30px">
				<center>
					<p><strong>Product ID: </strong></p>
					<p><label value="@randomIDprod"><%= @randomIDprod %></label></p>
					<p><input type="hidden" name="product[product_id]" value="<%= @randomIDprod %>"></p>
				
					<p><strong>Product Name:</strong></p>
					<p><input type="text_field" name="product[product_name]" required class = "form-control"></p>
					
					<p><strong>Product Stock:</strong></p>
					<p><input type="number" name="product[product_stock]" required class = "form-control"></p>
				
					<p><strong>Product Price:</strong></p>
					<p><input type="number" name="product[product_price]" required class = "form-control"></p>
				</center>
			</div>
		</div>

		<div class="row">	
			<a href="/suppliers" class="btn btn-danger">Cancel</a>
			<button type="submit" class="btn btn-success">Submit</button>
		</div>
	</div>	

<% end %>